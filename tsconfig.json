{
    "compilerOptions": {
      "target": "ES2019",
      "module": "CommonJS",
      "allowJs": false,
      "sourceMap": true,
      "removeComments": true,
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": false,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist/",
      "skipLibCheck": true,
      "lib": ["ES2020.Promise"]
    },
    "include": ["src/**/*"]
  }
  